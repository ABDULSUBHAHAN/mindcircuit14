pipeline {
    agent any

    stages {
        stage('CLONE SCM') {
            steps {
                echo 'cloning from github'
				git branch: 'main', url: 'https://github.com/devopstraininghub/mindcircuit14.git'
            }
		}	
		stage('BUILD ARTIFACT') {
            steps {
                echo 'building project with maven'
				sh 'mvn clean install'
            }
		}	
		stage('DEPLOY COMCAT') {
            steps {
                echo 'deploy artifact to webservar'
				deploy adapters: [tomcat9(credentialsId: 'tomcat', path: '', url: 'http://18.212.200.209:8091/manager/html')], contextPath: 'MC-PATH', war: '**/*.war'
            }	
			
        }
    }
}
